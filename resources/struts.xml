<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <!-- アクションのパッケージ定義 -->
    <package name="default" extends="struts-default">
        <!-- Hello worldのサンプルアクション -->
        <action name="login" class="com.forcebook.action.LoginAction" method="execute">
            <result name="success">/view/top.jsp</result>
			<result name="error">/view/login.jsp</result>
        </action>

        <action name="register" class="com.forcebook.action.TransitionAction" method="execute">
        	<result name="success">/view/reg_form.jsp</result>
        </action>

		<action name="confirm" class="com.forcebook.action.RegisterConfirmAction" method="execute">
        	<result name="success">/view/reg_confirm.jsp</result>
        	<result name="error">/view/reg_form.jsp</result>
        </action>
    </package>

</struts>